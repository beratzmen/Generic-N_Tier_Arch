@model List<Generic.Entities.Products>
@{
    ViewBag.Title = "PRODUCTS";
}
<br />
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            @using (Html.BeginForm("Get", "Product"))
            {
                <input type="text" placeholder="ID" name="id" />
                <input type="submit" class="btn btn-default" value="GETİR" />
            }
        </div>
    </div>
</div>
<a href="/Product/Create" class="btn btn-success">YENİ KAYIT</a>
<br /><br />
<div class="container">
    <div class="col-md-12">
        <div class="row">
            <table style="width:100%" border="1">
                <thead>
                    <tr>
                        <th style="text-align:center;"> ID </th>
                        <th style="text-align:center;"> NAME </th>
                        <th style="text-align:center;"> PRİCE</th>
                        <th style="text-align:center;"> SİL </th>
                        <th style="text-align:center;"> GÜNCELLE </th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.ProductID</td>
                            <td>@item.ProductName</td>
                            <td>@item.UnitPrice</td>
                            <td style="text-align:center;"><a href="/Product/Delete/@item.ProductID" name="id" class="btn btn-danger" onclick="myFunction()">SİL</a></td>
                            <td style="text-align:center;"><a href="/Product/Update/@item.ProductID" name="ProductID" class="btn btn-primary">GÜNCELLE</a></td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>