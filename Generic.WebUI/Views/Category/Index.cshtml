@model List<Generic.Entities.Categories>

@{
    ViewBag.Title = "CATEGORY";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            @using (Html.BeginForm("Get", "Category"))
            {
                <input type="text" placeholder="ID" name="id" />
                <input type="submit" class="btn btn-default" value="GETİR" />
            }
        </div>
    </div>
</div>
<a href="/Category/Create" class="btn btn-success">YENİ KAYIT</a>
<br /><br />
<div class="container">
    <div class="col-md-12">
        <div class="row">
            <table style="width:100%" border="1">
                <thead>
                    <tr>
                        <th style="text-align:center;"> ID </th>
                        <th style="text-align:center;"> NAME </th>
                        <th style="text-align:center;"> DESCR.</th>
                        <th style="text-align:center;"> SİL </th>
                        <th style="text-align:center;"> GÜNCELLE </th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.CategoryID</td>
                            <td>@item.CategoryName</td>
                            <td>@item.Description</td>
                            <td style="text-align:center;"><a href="/Category/Delete/@item.CategoryID" class="btn btn-danger">SİL</a></td>
                            <td style="text-align:center;"><a href="/Category/Update/@item.CategoryID" class="btn btn-primary">GÜNCELLE</a></td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>